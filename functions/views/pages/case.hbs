<article class="case">
  <header class="case__header">
    <div class="case__info grid">
      <div class="case__headings grid__cell">
        <h1 class="case__title grid__heading grid__heading--l">{{name}}</h1>
        <h2 class="case__subtitle grid__heading grid__heading--l">{{headline}}</h2>
      </div>
      <div class="case__details grid">
        {{!-- <ul class="case__data">
          <li>2014</li>
          <li>Company website</li>
          <li>Design / Development</li>
        </ul> --}}
        <div>
          <button class="case__toggle" data-toggle-button="info">Info +</button>
          <div class="case__summary" data-toggle-target="info">
            <ul class="case__data">
              <li>2014</li>
              <li>Company website</li>
              <li>Design / Development</li>
            </ul>
            <p>{{{summary}}}</p>
          </div>
        </div>
      </div>
    </div>
    <picture class="case__hero lazyLoader">
      <img class="lazyLoader__image" data-src="{{hero}}" alt="{{headline}}">
    </picture>
  </header>

  <div class="gallery">
    {{!-- {{#each content}}
    <picture class="gallery__picture lazyLoader">
      <img class="lazyLoader__image" data-src="{{src}}" alt="{{name}}">
    </picture>
    {{/each}} --}}
    {{#each content}}
    {{!-- Animate in view, set up in CaseController --}}
    <picture class="gallery__item">
      <source media="(min-width: 900px)" srcset="{{src}} 2x, {{srcMd}} 1x">
      <img src="{{srcMd}}" alt="{{name}}">
    </picture>
    {{/each}}
  </div>
  <div class="grid">
    <section class="grid__cell grid__cell--10">
      <h1 class="grid__heading grid__heading--l">Hit me up</h1>
    </section>
    <section class="grid__cell grid__cell--10">
      <h1 class="grid__heading grid__heading--l">Next case</h1>
    </section>
  </div>
</article>