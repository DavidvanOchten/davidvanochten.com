<article class="case">
  <header class="case__header">
    <div class="case__info">
      <div class="case__headings">
        <h1 class="case__title">{{name}}</h1>
        <h2 class="case__subtitle">{{{headline}}}</h2>
      </div>
      <div class="case__details">
        <ul>
          <li>
            <div>2014</div>
          </li>
          <li>
            <div>Design / Development</div>
          </li>
        </ul>
        <div>
          <button class="case__toggle" data-toggle-button="info">Info +</button>
          <div class="case__summary" data-toggle-target="info">
            <p>{{{summary}}}</p>
          </div>
        </div>
      </div>
    </div>
    <picture class="case__hero lazyLoader">
      <img class="lazyLoader__image" data-src="{{hero}}" alt="{{headline}}">
    </picture>
  </header>

  <div class="gallery">
    {{#each content}}
    <picture class="gallery__item">
      <source media="(min-width: 900px)" srcset="{{src}} 2x, {{srcMd}} 1x">
      <img src="{{srcMd}}" alt="{{name}}">
    </picture>
    {{/each}}
  </div>
  <div class="">
    <section class="">
      <h2 class="">Next case</h2>
      <h1>Things I Took</h1>
    </section>
  </div>
</article>