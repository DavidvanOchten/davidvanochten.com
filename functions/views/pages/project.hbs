<article class="project u-flex">
  <div class="project__column" aria-hidden="false" data-toggle="column">
    <div class="project__info">
      <header class="project__header">
        <div class="project__heading reveal reveal--skew" data-reveal="skew">
          <h1 class="project__title headline headline--inline">{{name}}</h1>
          <h2 class="project__subtitle headline headline--inline">{{{headline}}}</h2>
        </div>
        <ul class="project__details u-flex">
          <li class="u-mask">
            <span class="reveal reveal--04 reveal--mask" data-reveal="mask">2014</span>
          </li>
          <li class="u-mask">
            <span class="reveal reveal--05 reveal--mask" data-reveal="mask">Design / Development</span>
          </li>
        </ul>
      </header>
      <div class="reveal reveal--06 reveal--fade" data-reveal="fade">{{{summary}}}</div>
    </div>

    <footer class="project__footer">
      <a class="button button--link" href="/">
        <span class="button__text">Next project</span>
      </a>
      <a class="button" href="/work">Back to overview</a>
    </footer>
  </div>

  <div class="gallery" role="button" aria-label="Open gallery" aria-pressed="false" tabindex="0" data-toggle-trigger="gallery-content" data-gallery="project">
    <div class="gallery__header">
      <div class="gallery__hero lazyLoader">
        {{!-- Add md hero in backend --}}
        <img class="lazyLoader__content" alt="{{headline}}" data-src="{{hero}}" data-gallery-hero>
      </div>
      <div class="gallery__banner">
        <span>Open gallery +</span>
      </div>
    </div>

    <div class="gallery__content" aria-hidden="true" data-toggle="gallery-content">
      {{#each content}}
      <div class="gallery__item" data-gallery-item>
        {{!-- If video etc. --}}
        {{!-- Add "playsinline" to video element --}}
        <img alt="{{name}}" data-src="{{src}}" data-src-md="{{srcMd}}">
        {{!-- Change alt tag. Save file name on save (without extention) --}}
      </div>
      {{/each}}
      <div>
        <strong class="headline">Next project</strong>
        <div>IMA</div>
      </div>
    </div>
  </div>
</article>