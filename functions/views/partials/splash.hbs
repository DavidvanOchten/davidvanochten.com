<div class="splash splash--is-visible" data-splash>
  <style>
    .splash {
      position: fixed;
      top: 0;
      left: 0;
      z-index: 50;
      display: flex;
      justify-content: space-between;
      height: 100vh;
      width: 100vw;
      pointer-events: none;
      opacity: 0;
      transition: opacity 0s linear 1.5s;
    }

    .splash--is-visible {
      opacity: 1;
      pointer-events: auto;
    }

    .splash__column {
      width: 100%;
      background-color: white;
      transform: translate3d(0, 100vh, 0);
      transition: transform 1s cubic-bezier(.75, 0, .25, 1);
    }

    .splash--is-visible .splash__column {
      transform: translate3d(0, 0, 0);
    }

    .splash__column:nth-child(3) {
      transition-delay: .10s;
    }

    .splash__column:nth-child(4) {
      transition-delay: .16s;
    }

    .splash__column:nth-child(5) {
      transition-delay: .2s;
    }

    .splash__column:nth-child(6) {
      transition-delay: .23s;
    }

    .splash__column:nth-child(7) {
      transition-delay: .26s;
    }

    .splash__column:nth-child(8) {
      transition-delay: .29s;
    }

    .splash__column:nth-child(9) {
      transition-delay: .32s;
    }

    .splash__column:nth-child(10) {
      transition-delay: .35s;
    }

    .splash__column:nth-child(11) {
      transition-delay: .38s;
    }

    .splash__column:nth-child(12) {
      transition-delay: .41s;
    }

    .splash__column:nth-child(13) {
      transition-delay: .44s;
    }

  </style>

  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>
  <div class="splash__column"></div>

  <script>
    document.body.style.overflow = 'hidden';

    var splash = {};
    splash.root = document.querySelector("[data-splash]");

    window.addEventListener("load", function() {
        splash.root.addEventListener("transitionend", function(e) {
            if (e.target === splash.root) {
              e.target.parentNode.removeChild(splash.root);
            }
        });

        setTimeout(function() {
          document.body.removeAttribute("style");
          splash.root.classList.remove("splash--is-visible");
        }, 1500)
    });
  </script>
</div>