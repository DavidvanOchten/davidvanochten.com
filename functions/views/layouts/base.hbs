    </div> --}}

    <main class="siteContent" role="main" data-main>
      <div class="spinner" data-spinner></div>
      <div class="page" data-view="{{view}}">
        {{{body}}}
      </div>
    </main>

    {{!-- {{> footer}} --}}

    <script src="/app.bundle.js"></script>
  </body>
</html>