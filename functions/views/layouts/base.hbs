  <link rel="manifest" href="/manifest.json">
  <style>.splash{position:fixed;top:0;left:0;z-index:20;height:100vh;width:100vw;background-color:#fff;opacity:0;-webkit-transition:opacity .5s linear .25s;transition:opacity .5s linear .25s;pointer-events:none}.splash__header{position:absolute;top:50%;left:0;padding-right:4.16667vw;padding-left:4.16667vw;line-height:3rem;opacity:0;-webkit-transition:opacity .25s linear;transition:opacity .25s linear;-webkit-transform:translateY(-50%);transform:translateY(-50%)}.splash__title{font-size:2.618rem}.splash__subtitle{font-size:1.618rem;color:#9b9b9b}.splash--isVisible{opacity:1;pointer-events:auto}.splash--isVisible .splash__header{opacity:1}</style>
  <link rel="stylesheet" href="/app.bundle.css">
</head>
  <body style="overflow: hidden;">
    {{> splash}}
    {{> header}}

    {{!-- <div class="layout">
      <input type="checkbox">
